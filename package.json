{
  "name": "magawa",
  "version": "0.7.2",
  "description": "A minesweeper clone.",
  "author": "Simon Lepel <simbo@simbo.de> (https://simbo.de)",
  "homepage": "https://simbo.codes/magawa",
  "license": "MIT",
  "private": true,
  "repository": "github:simbo/magawa",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "parcel build src/*.pug --public-url /magawa --experimental-scope-hoisting",
    "dev": "parcel src/*.pug --public-url /magawa",
    "lint": "yarn lint:prettier && yarn lint:tslint",
    "lint:prettier": "prettier --check \"**/*.{ts,tsx,scss,js,md,json}\"",
    "lint:tslint": "tslint -p tsconfig.json -c tslint.json",
    "serve": "live-server --host=0.0.0.0 --port=1234 --path=dist --mount=/magawa:dist --no-browser",
    "start": "yarn run dev",
    "test": "echo \"No tests specified. Skipping...\" && exit 0"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom/test-utils": "preact/test-utils",
    "react-dom": "preact/compat"
  },
  "parcelCleanPaths": [
    ".cache",
    "dist"
  ],
  "staticFiles": {
    "staticPath": "src/static",
    "watcherGlob": "**"
  },
  "dependencies": {
    "css-reset-and-normalize": "^2.3.5",
    "date-fns": "^2.16.1",
    "history": "^4.10.1",
    "immer": "^8.0.0",
    "lz-string": "^1.4.4",
    "nanoid": "^3.1.20",
    "pixi.js": "^5.3.3",
    "preact": "^10.5.7",
    "preact-router": "^3.2.1",
    "rxjs": "^6.6.3",
    "shuffle-array": "^1.0.1",
    "store": "^2.0.12"
  },
  "devDependencies": {
    "@types/history": "^4.7.8",
    "@types/lz-string": "^1.3.34",
    "@types/node": "^14.14.13",
    "@types/shuffle-array": "^1.0.0",
    "@types/store": "^2.0.2",
    "autoprefixer": "^10.1.0",
    "css-mqpacker-sort-mediaqueries": "^0.2.2",
    "cssnano": "^4.1.10",
    "live-server": "^1.2.1",
    "mqpacker": "^7.0.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-bundle-visualiser": "^1.2.0",
    "parcel-plugin-clean-easy": "^1.0.2",
    "parcel-plugin-package-version": "^1.0.2",
    "parcel-plugin-static-files-copy": "^2.5.0",
    "postcss": "^8.2.1",
    "prettier": "^2.2.1",
    "pug": "^3.0.0",
    "sass": "^1.30.0",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  }
}
